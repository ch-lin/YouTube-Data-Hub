# =============================================================================
# This file contains environment variables for configuring the Docker Compose setup.
# It should not be committed to version control if it contains sensitive data.
# Instead, create a .env.example file with placeholder values.
# =============================================================================

# =============================================================================
# JPA / Hibernate Configuration
# =============================================================================
# Control Hibernate DDL auto (e.g., update, validate, none) and SQL logging.
SPRING_JPA_HIBERNATE_DDL_AUTO="update"
SPRING_JPA_SHOW_SQL="false"

# =============================================================================
# Security Configuration
# =============================================================================
# Controls whether JWT authentication is enforced in the backend services.
# 'true' for production/staging environments.
# 'false' for local development to bypass authentication.
APP_SECURITY_ENABLED="true"
APP_SECURITY_SWAGGER_PUBLIC="false"
SPRINGDOC_API_DOCS_ENABLED="false"
SPRINGDOC_SWAGGER_UI_ENABLED="false"

# =============================================================================
# Debugging Configuration
# =============================================================================
# Enables debug logging for specified modules of Next.js. Use "*" for all modules.
DEBUG=""

# =============================================================================
# Downloader Configuration
# =============================================================================
# Default format filtering and sorting options for yt-dlp.
# These values override the defaults in application.properties.
DOWNLOADER_DURATION="10"
DOWNLOADER_START_DOWNLOAD_AUTOMATICALLY="true"
DOWNLOADER_REMOVE_COMPLETED_JOB_AUTOMATICALLY="false"
DOWNLOADER_THREAD_POOL_SIZE="3"
DOWNLOADER_YTDLP_FORMAT_SORTING="size,vbr"
DOWNLOADER_YTDLP_FORMAT_FILTERING="bv+ba/b"
DOWNLOADER_YTDLP_REMUX_VIDEO=""
DOWNLOADER_YTDLP_WRITE_DESCRIPTION="true"
DOWNLOADER_YTDLP_WRITE_SUBS="true"
DOWNLOADER_YTDLP_SUB_LANG="ja.*"
DOWNLOADER_YTDLP_WRITE_AUTO_SUBS="true"
DOWNLOADER_YTDLP_SUB_FORMAT="srt"
DOWNLOADER_YTDLP_OUTPUT_TEMPLATE=""
DOWNLOADER_YTDLP_KEEP_VIDEO="true"
DOWNLOADER_YTDLP_EXTRACT_AUDIO="true"
DOWNLOADER_YTDLP_AUDIO_FORMAT="m4a"
DOWNLOADER_YTDLP_AUDIO_QUALITY="0"
DOWNLOADER_YTDLP_OVERWRITE="DEFAULT"
DOWNLOADER_YTDLP_NO_PROGRESS="true"
DOWNLOADER_YTDLP_USE_COOKIE="false"
