# =============================================================================
# This file contains environment variables for configuring the Docker Compose setup.
# It should not be committed to version control if it contains sensitive data.
# Instead, create a .env.example file with placeholder values.
# =============================================================================

# =============================================================================
# JPA / Hibernate Configuration
# =============================================================================
# Control Hibernate DDL auto (e.g., update, validate, none) and SQL logging.
SPRING_JPA_HIBERNATE_DDL_AUTO="update"
SPRING_JPA_SHOW_SQL="true"

# =============================================================================
# Security Configuration
# =============================================================================
# Controls whether JWT authentication is enforced in the backend services.
# 'true' for production/staging environments.
# 'false' for local development to bypass authentication.
APP_SECURITY_ENABLED="true"
APP_SECURITY_SWAGGER_PUBLIC="true"

# =============================================================================
# YouTube Hub Default Configuration
# =============================================================================
# Whether to automatically start the fetch scheduler on startup.
YOUTUBE_HUB_DEFAULT_AUTO_START_FETCH_SCHEDULER="false"
# The type of scheduler to use. Can be 'FIXED_RATE' or 'CRON'.
YOUTUBE_HUB_DEFAULT_SCHEDULER_TYPE="CRON"
# The fixed rate for the scheduler in milliseconds. Defaults to 24 hours.
YOUTUBE_HUB_DEFAULT_FIXED_RATE="86400000"
# The cron expression for the scheduler (e.g., "0 0 9,15,21 * * *").
YOUTUBE_HUB_DEFAULT_CRON_EXPRESSION="0 0 9,15,21 * * *"
# The time zone for the cron expression (e.g., "Asia/Taipei").
YOUTUBE_HUB_DEFAULT_CRON_TIME_ZONE="Asia/Taipei"
# The daily quota limit for the YouTube Data API. Defaults to 10,000.
YOUTUBE_HUB_DEFAULT_QUOTA="10000"
# The safety threshold for the quota. Defaults to 500.
YOUTUBE_HUB_DEFAULT_QUOTA_SAFETY_THRESHOLD="500"
