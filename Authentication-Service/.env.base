# =============================================================================
# This file contains environment variables for configuring the Docker Compose setup.
# It should not be committed to version control if it contains sensitive data.
# Instead, create a .env.example file with placeholder values.
# =============================================================================

# =============================================================================
# JPA / Hibernate Configuration
# =============================================================================
# Control Hibernate DDL auto (e.g., update, validate, none) and SQL logging.
SPRING_JPA_HIBERNATE_DDL_AUTO="update"
SPRING_JPA_SHOW_SQL="false"

# =============================================================================
# JWT Default Configuration
# =============================================================================
# Access token expiration time in milliseconds (e.g., 900000 = 15 minutes).
AUTHENTICATION_DEFAULT_CONFIG_JWT_EXPIRATION="900000"
# Refresh token expiration time in milliseconds (e.g., 604800000 = 7 days).
AUTHENTICATION_DEFAULT_CONFIG_JWT_REFRESH_EXPIRATION="604800000"
# The issuer URI for JWTs. For local dev, it's the host port.
AUTHENTICATION_DEFAULT_CONFIG_JWT_ISSUER_URI="http://authentication-backend:8080"

# =============================================================================
# RSA Key Configuration
# =============================================================================
# The location of the public key used to verify JWT signatures.
AUTH_RSA_PUBLIC_KEY_PATH="file:/app/certs/public.pem"
# The location of the private key used to sign JWTs.
AUTH_RSA_PRIVATE_KEY_PATH="file:/app/certs/private.pem"
