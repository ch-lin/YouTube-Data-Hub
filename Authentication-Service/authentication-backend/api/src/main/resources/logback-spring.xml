<configuration>
    <!-- Include Spring Boot's default logback configuration for base setup. -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Define a property for the log file path. It uses environment variables or system properties
         with fallbacks, defaulting to a 'spring.log' file in the system's temp directory. -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}/spring.log}"/>

    <!-- Appender for logging to the console (stdout). -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--
            Pattern for console logs. Includes a timestamp, thread name, log level, logger name,
            correlation ID from MDC for request tracing, the log message, and a newline.
            -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{correlationId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender for logging to a file, with rolling capabilities. -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <!-- Time-based rolling policy. Creates a new log file daily and keeps a history of the last 30 days. -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- Pattern for file logs, consistent with the console pattern. -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{correlationId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set a specific log level for the application's packages.
         This is useful for getting more detailed logs from your own code during development
         without affecting the verbosity of third-party libraries. -->
    <logger name="ch.lin.authentication.service" level="DEBUG"/>
    <!-- <logger name="ch.lin.authentication.service.backend.api.app.service.AuthorizationServiceImpl" level="DEBUG"/> -->

    <!-- The root logger configuration. All loggers inherit from this. -->
    <root level="INFO">
        <!-- Attach both the CONSOLE and FILE appenders to the root logger. -->
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>